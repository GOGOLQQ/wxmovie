.movie-detail {
  width: 100%;
  height: 188px;
  position: relative;
}

.movie-detail .detail-cover {
  filter: blur(10px); 
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  z-index: -1;
   opacity: .55; 
}
.movie-detail .detail-bg{
  position:absolute;width:100%;height:100%;background-color:#333;z-index: -1;
}

.movie-detail .detail {
  display: flex;
  justify-content: space-between;
  padding: 20px 30px 20px 15px;
}

.movie-detail .detail .poster {
  flex: 1;
}

.movie-detail .detail .poster image {
  width: 220rpx;
  height: 300rpx;
}

.movie-detail .content {
  flex: 2;
  padding-left: 20rpx;
  color: #fff;
}
